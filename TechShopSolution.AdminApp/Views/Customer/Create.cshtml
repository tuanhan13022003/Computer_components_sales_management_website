@model TechShopSolution.ViewModels.Catalog.Customer.CustomerCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section jsFooter{
    <script src="~/js/Location.js"></script>
}


<div class="container-fluid">
    <h2 class="mt-4">Thêm khách hàng</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/customer/index">Khách hàng</a></li>
        <li class="breadcrumb-item active">Thêm khách hàng</li>
    </ol>
    <form asp-action="Create" asp-controller="customer" method="post">
        <div class="padding-container">
            <div class="row">
                <div class="col-lg-8 col-12">
                    <div class="wrapper-content mb-3 shadow">
                        <label class="title-fill">Thông tin chung</label>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="name" class="control-label lableFormField"></label>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="email" class="control-label lableFormField"></label>
                            <input asp-for="email" class="form-control" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="password" class="control-label lableFormField"></label>
                            <input asp-for="password" type="password" class="form-control" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="phone" class="control-label lableFormField"></label>
                            <input asp-for="phone" class="form-control" />
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="birthday" class="control-label lableFormField"></label>
                            <input asp-for="birthday" class="form-control" id="datepicker" />
                            <span asp-validation-for="birthday" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label lableFormField" asp-for="sex"></label>
                                    <div class="form-check">
                                        <input asp-for="sex" class="form-check-input" type="radio" value="true" checked="checked">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Nam
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="sex" class="form-check-input" type="radio" value="false">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Nữ
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label lableFormField" asp-for="isActive"></label>
                                    <div class="form-check">
                                        <input asp-for="isActive" class="form-check-input" type="radio" value="true" checked="checked">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Kích hoạt
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="isActive" class="form-check-input" type="radio" value="false">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Khóa
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="wrapper-content shadow">
                        <label class="title-fill">Địa chỉ</label>
                        <hr />
                        <div class="form-group">
                            <label asp-for="City" class="control-label lableFormField"></label>
                            <input asp-for="City" class="form-control" id="txtCity" hidden />
                            <select id="ddlCity" asp-for="City" class="form-control">
                                <option value="">--Chọn tỉnh thành phố--</option>
                            </select>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="District" class="control-label lableFormField"></label>
                            <input asp-for="District" class="form-control" id="txtDistrict" hidden />
                            <select id="ddlDistrict" asp-for="District" class="form-control">
                                <option value="">--Chọn quận huyện--</option>
                            </select>
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Ward" class="control-label lableFormField"></label>
                            <input asp-for="Ward" class="form-control" hidden id="txtWard" />
                            <select id="ddlWard" asp-for="Ward" class="form-control">
                                <option value="">--Chọn phường xã--</option>
                            </select>
                            <span asp-validation-for="Ward" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="House" class="control-label lableFormField"></label>
                            <input asp-for="House" class="form-control" />
                            <span asp-validation-for="House" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-12">
                    <div class="mt-3 text-right">
                        <a class="btn btn-primary" href="/customer/index">
                            <i class="fa fa-chevron-left"></i>  Trở về
                        </a>
                        <button class="btn btn-success" type="submit" asp-action="Create" asp-controller="Customer">
                            <i class="fa fa-save"></i>
                            Lưu lại
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



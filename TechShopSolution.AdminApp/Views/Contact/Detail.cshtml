@model TechShopSolution.ViewModels.Website.Contact.ContactUpdateRequest
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

@{
    ViewData["Title"] = "Chi tiết thông tin liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter {

    @if (ViewBag.ErrorMsg != null)
    {
        <script>
            window.onload = function () {
                var x = document.getElementById("snackbarDanger");

                // Add the "show" class to DIV
                x.className = "show";

                // After 3 seconds, remove the show class from DIV
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            };
        </script>
    }
    @if (ViewBag.SuccessMsg != null)
    {
        <script>
            window.onload = function () {
                var x = document.getElementById("snackbar");

                // Add the "show" class to DIV
                x.className = "show";

                // After 3 seconds, remove the show class from DIV
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            };
        </script>
    }
    <script>
        $("#ProductImageInput").change(function (event) {
            var x = URL.createObjectURL(event.target.files[0]);
            $("#ProductImage").attr("src", x);
            console.log(event);
        })
    </script>
}


<div class="container-fluid">
    <h2 class="mt-4">Chi tiết liên hệ</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Trang chủ</a></li>
        <li class="breadcrumb-item active">Liên hệ</li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
    @if (ViewBag.SuccessMsg != null)
    {
        <div class="alert alert-success" id="snackbar" role="alert">
            <b>@ViewBag.SuccessMsg</b>
        </div>
    }
    @if (ViewBag.ErrorMsg != null)
    {
        <div class="alert alert-danger" id="snackbarDanger" role="alert">
            <b>@ViewBag.ErrorMsg</b>
        </div>
    }
    <form asp-action="Update" asp-controller="Contact" enctype="multipart/form-data" method="post">
        <div class="padding-container">
            <div class="row">
                <div class="col-lg-12 col-12 wrapper-content-limit">
                    <div class="wrapper-content mb-3 shadow">
                        <label class="title-fill">Thông tin chung</label>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-lg-5 col-12">
                                <div class="form-group">
                                    <label asp-for="company_logo" class="control-label lableFormField"></label>
                                    <div class="ImageBoxMain">
                                        @if (Model.imageBase64 == null)
                                        {
                                            <img src="~/assets/img/toppng.com-file-upload-image-icon-980x980.png" id="ProductImage" class="image hoverDel" />
                                        }
                                        else
                                        {
                                            <img src="@(Configuration["BaseAddress"] + "/user-content/" + @Model.imageBase64)" id="ProductImage" class="image hoverDel" />
                                        }
                                    </div>
                                    <div class="custom-file">
                                        <input asp-for="company_logo" type="file" accept=".jpeg,.png,.gif,.jpg" class="custom-file-input" id="ProductImageInput">
                                        <label class="custom-file-label" for="customFile">Chọn hình ảnh...</label>
                                    </div>
                                    <span asp-validation-for="company_logo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-7 col-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="id" hidden />
                                <div class="form-group mt-2">
                                    <label asp-for="company_name" class="control-label lableFormField"></label>
                                    <input asp-for="company_name" class="form-control" id="txtName" />
                                    <span asp-validation-for="company_name" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="adress" class="control-label lableFormField"></label>
                                    <input asp-for="adress" class="form-control" id="txtName" />
                                    <span asp-validation-for="adress" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="email" class="control-label lableFormField"></label>
                                    <input asp-for="email" class="form-control" id="txtName" />
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="phone" class="control-label lableFormField"></label>
                                    <input asp-for="phone" class="form-control" id="txtName" />
                                    <span asp-validation-for="phone" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="hotline" class="control-label lableFormField"></label>
                                    <input asp-for="hotline" class="form-control" id="txtName" />
                                    <span asp-validation-for="hotline" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="fax" class="control-label lableFormField"></label>
                                    <input asp-for="fax" class="form-control" id="txtName" />
                                    <span asp-validation-for="fax" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="wrapper-content shadow">
                        <label class="title-fill">Liên kết xã hội</label>
                        <hr />
                        <div class="form-group mt-2">
                            <label asp-for="social_fb" class="control-label lableFormField"></label>
                            <input asp-for="social_fb" class="form-control" id="txtName" />
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="social_instagram" class="control-label lableFormField"></label>
                            <input asp-for="social_instagram" class="form-control" id="txtName" />
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="social_twitter" class="control-label lableFormField"></label>
                            <input asp-for="social_twitter" class="form-control" id="txtName" />
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="social_youtube" class="control-label lableFormField"></label>
                            <input asp-for="social_youtube" class="form-control" id="txtName" />
                        </div>
                        <div class="mt-5 text-right">
                            <a class="btn btn-primary" href="/transport/index">
                                <i class="fa fa-chevron-left"></i>  Trở về
                            </a>
                            <button class="btn btn-success" type="submit">
                                <i class="fa fa-save"></i>
                                Lưu lại
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


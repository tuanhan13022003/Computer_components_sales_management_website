@model TechShopSolution.ViewModels.Catalog.Brand.BrandCreateRequest

@{
    ViewData["Title"] = "Thêm thương hiệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter {
    <script src="~/js/AddonSEO.js"></script>

}
<div class="container-fluid">
    <h2 class="mt-4">Thêm thương hiệu</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/brand/index">Thương hiệu</a></li>
        <li class="breadcrumb-item active">Thêm thương hiệu</li>
    </ol>
    <form asp-action="Create" asp-controller="Brand" method="post">
        <div class="padding-container">
            <div class="row">
                <div class="col-lg-12 col-12 wrapper-content-limit">
                    <div class="wrapper-content mb-3 shadow">
                        <label class="title-fill">Thông tin chung</label>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mt-2">
                            <label asp-for="brand_name" class="control-label lableFormField"></label>
                            <input asp-for="brand_name" class="form-control" id="txtName" />
                            <span asp-validation-for="brand_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="isActive" class="control-label lableFormField"></label>
                            <div class="form-check">
                                <input class="form-check-input" asp-for="isActive" type="radio" value="true" id="flexRadioDefault1" checked>
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Hiển thị
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" asp-for="isActive" type="radio" value="false" id="flexRadioDefault2">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Ẩn đi
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="wrapper-content mb-3 shadow">
                        <label class="title-fill">Tối ưu SEO</label>
                        <hr />
                        <label class="control-label mb-3" id="text-seo-sug">
                            Thiết lập các thẻ mô tả giúp khách hàng dễ dàng tìm thấy danh mục này trên công cụ tìm kiếm như Google
                        </label>
                        <div class="collection-seo--preview mb-3 hide">
                            <p class="collection-seo--preview-url text-truncate mb-0"></p>
                            <p class="collection-seo--preview-title mb-1 mt-2"></p>
                            <p class="collection-seo--preview-mota mb-1"></p>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="brand_slug" class="control-label lableFormField"></label>
                            <input asp-for="brand_slug" class="form-control" id="txtSlug" />
                            <span asp-validation-for="brand_slug" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="meta_title" class="control-label lableFormField"></label>
                            <input asp-for="meta_title" class="form-control" id="txtMetaTitle" />
                            <span asp-validation-for="meta_title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="meta_descriptions" class="control-label lableFormField"></label>
                            <input asp-for="meta_descriptions" class="form-control" id="txtMetaDesc"/>
                            <span asp-validation-for="meta_descriptions" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="meta_keywords" class="control-label lableFormField"></label>
                            <input asp-for="meta_keywords" class="form-control" />
                            <span asp-validation-for="meta_keywords" class="text-danger"></span>
                        </div>
                        <div class="mt-5 text-right">
                            <a class="btn btn-primary" href="/brand/index">
                                <i class="fa fa-chevron-left"></i>  Trở về
                            </a>
                            <button class="btn btn-success" type="submit">
                                <i class="fa fa-save"></i>
                                Lưu lại
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



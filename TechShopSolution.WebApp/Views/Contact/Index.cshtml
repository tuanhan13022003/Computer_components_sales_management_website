@using System.Security.Claims;
@model TechShopSolution.ViewModels.Website.Contact.ContactViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Liên hệ - TechShop Việt Nam</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="TechShop">
    <link id="callCss" rel="stylesheet" href="/themes/bootshop/bootstrap.min.css" media="screen" />
    <link href="/themes/css/base.css" rel="stylesheet" media="screen" />
    <!-- Bootstrap style responsive -->
    <link href="/themes/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <!-- Google-code-prettify -->
    <link href="/themes/js/google-code-prettify/prettify.css" rel="stylesheet" />
    <!-- fav and touch icons -->
    <link href="/themes/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="~/images/favicon.png" type="image/x-icon">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/images/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/images/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/images/favicon.png">
    <link rel="apple-touch-icon-precomposed" href="~/images/favicon.png">
    <style type="text/css" id="enject"></style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">
    <link href="~/css/site.min.css" rel="stylesheet" />
</head>
<body>
    <div class="loaderbody" id="loaderbody">
        <div class="loader"></div>
    </div>
    @{
        @if (ViewBag.SuccessMsg != null)
        {
            <div class="alert alert-success" id="snackbar" role="alert">
                <b>@ViewBag.SuccessMsg</b>
            </div>
        }
        @if (ViewBag.ErrorMsg != null)
        {
            <div class="alert alert-danger" id="snackbarDanger" role="alert">
                <b>@ViewBag.ErrorMsg</b>
            </div>
        }
    }
    <div id="header">
        <div class="container">
            <!-- Navbar ================================================== -->
            <div id="logoArea" class="navbar">
                <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                @await Component.InvokeAsync("NavbarMenu")
            </div>
        </div>
    </div>

    <!-- Header End====================================================================== -->
    <div id="mainBody" class="contact-mainBody">
        <div class="container">
            <hr class="soften">
            <h3>
                LIÊN HỆ VỚI CHÚNG TÔI
            </h3>
            <hr class="soften" />
            <div class="row">
                <div class="span3 margin-top-20">
                    <img class="contact-company-logo" src="@(Configuration["BaseAddress"] + "/user-content/" + @Model.company_logo)" />
                </div>
                <div class="span5 margin-top-20">
                    <div class="contact-company-name">
                        @Model.company_name
                    </div>
                    <div class="contact-info"><i class="icon-map-marker"></i><b>Địa chỉ: </b> @Model.adress</div>
                    <div class="contact-info"><i class="fa fa-phone"></i> <b>Điện thoại: </b> @Model.phone</div>
                    <div class="contact-info"><i class="fa fa-mobile"></i> <b>Hotline: </b> @Model.hotline</div>
                    <div class="contact-info"><i class="fa fa-fax"></i> <b>Fax: </b> @Model.fax</div>
                    <div class="contact-info">
                        <i class="fa fa-envelope"></i> <span class="contact-email">@Model.email</span>
                    </div>
                </div>
                <div class="span4">
                    <h4>Gửi phản hồi</h4>
                    <form class="form-horizontal" asp-action="SendFeedback" asp-controller="Contact" method="post">
                        <fieldset>
                            <div class="control-group">
                                <input type="text" placeholder="Họ tên" name="name" required class="input-xlarge" />
                            </div>
                            <div class="control-group">
                                <input type="email" placeholder="Địa chỉ email" name="email" required class="input-xlarge" />
                            </div>
                            <div class="control-group">
                                <input type="text" placeholder="Số điện thoại" name="phone" required class="input-xlarge" />
                            </div>
                            <div class="control-group">
                                <input type="text" placeholder="Tiêu đề phản hồi" name="title" required class="input-xlarge" />
                            </div>
                            <div class="control-group">
                                <textarea rows="3" id="textarea" class="input-xlarge" name="content" required placeholder="Viết nội dung phản hồi của bạn"></textarea>
                            </div>
                            <button class="btn btn-large" type="submit">Gửi phản hồi</button>

                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="row margin-top-20">
                <div class="span12">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.8250334584795!2d106.63314591528388!3d10.74796436265624!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f5f123cda57%3A0x166b165586e93bb1!2stechshopvn.xyz!5e0!3m2!1svi!2s!4v1626979639474!5m2!1svi!2s" style="width: 100%; height: 400px; border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>

    <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-chevron-up"></i></button>

    <!-- Footer ================================================================== -->
    @await Component.InvokeAsync("Footer")
    <!-- Placed at the end of the document so the pages load faster ============================================= -->
    <script src="/themes/js/jquery.js" type="text/javascript"></script>
    <script src="/themes/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/themes/js/google-code-prettify/prettify.js"></script>
    <script src="/themes/js/bootshop.js"></script>
    <script src="/themes/js/jquery.lightbox-0.5.js"></script>
    <script src="~/js/site.js"></script>
    @if (ViewBag.SuccessMsg != null)
    {
        <script>
            var x = document.getElementById("snackbar");

            // Add the "show" class to DIV
            x.className = "show";

            // After 3 seconds, remove the show class from DIV
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
        </script>
    }
    @if (ViewBag.ErrorMsg != null)
    {
        <script>
            window.onload = function () {
                var x = document.getElementById("snackbarDanger");

                // Add the "show" class to DIV
                x.className = "show";

                // After 3 seconds, remove the show class from DIV
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            };
        </script>
    }
    <script>

        $(function () {
            $("#loaderbody").addClass('hide');

            $(document).bind('ajaxStart', function () {
                $("#loaderbody").removeClass('hide');
            }).bind('ajaxStop', function () {
                $("#loaderbody").addClass('hide');
            });
        });
    </script>
    <!-- Themes switcher section ============================================================================================= -->
    <div id="secectionBox">
        <link rel="stylesheet" href="/themes/switch/themeswitch.css" type="text/css" media="screen" />
        <script src="/themes/switch/theamswitcher.js" type="text/javascript" charset="utf-8"></script>
    </div>
</body>
</html>

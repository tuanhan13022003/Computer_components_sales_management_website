@model TechShopSolution.ViewModels.Catalog.Customer.CustomerRegisterRequest
@{
    ViewData["Title"] = "Đăng ký thành viên - TechShop Việt Nam";
    ViewData["Robots"] = "noindex,nofollow";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnUrl = Context.Request.Query["ReturnUrl"];

}
@section Script {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}
<div class="span9">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home", new { area = "" })">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active">Đăng ký thành viên</li>
    </ul>
    <h3>Đăng ký</h3>
    <div class="well shadow">
        <form class="form-horizontal" asp-controller="Account" asp-action="Register" asp-route-returnurl = "@returnUrl" method="post">
            <h4>Điền thông tin cá nhân</h4>
            <div asp-validation-summary="ModelOnly" class="text-error"></div>
            <div class="control-group">
                <label class="control-label" asp-for="name">Họ và tên<sup style="color: #C74A6D">*</sup></label>
                <div class="controls">
                    <input type="text" placeholder="Họ và tên" class="margin-right-20" asp-for="name">
                    <span asp-validation-for="name" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" asp-for="sex">Giới tính <sup style="color: #C74A6D">*</sup></label>
                <div class="controls">
                    <select class="span1" asp-for="sex">
                        <option name="sex" value="true">Nam</option>
                        <option name="sex" value="false">Nữ</option>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" asp-for="phone">Số điện thoại<sup style="color: #C74A6D">*</sup></label>
                <div class="controls">
                    <input type="text" asp-for="phone" placeholder="Số điện thoại" class="margin-right-20">
                    <span asp-validation-for="phone" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input_email" asp-for="email">Email <sup style="color: #C74A6D">*</sup></label>
                <div class="controls">
                    <input type="email" id="input_email" placeholder="Địa chỉ Email" asp-for="email" class="margin-right-20">
                    <span asp-validation-for="email" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" asp-for="password" for="inputPassword1">Mật khẩu<sup style="color: #C74A6D">*</sup></label>
                <div class="controls">
                    <input type="password" asp-for="password" id="inputPassword1" placeholder="Mật khẩu" class="margin-right-20">
                    <span asp-validation-for="password" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" asp-for="confirmpassword" for="inputPassword2">Nhập lại mật khẩu<sup style="color: #C74A6D">*</sup></label>
                <div class="controls">
                    <input type="password" asp-for="confirmpassword" id="inputPassword2" placeholder="Nhập lại mật khẩu" class="margin-right-20">
                    <span asp-validation-for="confirmpassword" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" asp-for="birthday">Ngày sinh <sup style="color: #C74A6D">*</sup></label>
                <div class="controls">
                    <input type="date" asp-for="birthday" class="margin-right-20"/>
                    <span asp-validation-for="birthday" class="text-error"></span>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input class="btn btn-large btn-success" type="submit" value="Đăng ký" />
                </div>
            </div>
            <div class="alert alert-block alert-error fade in">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>Note:</strong> * Các trường bắt buộc phải nhập. Quý khách hàng vui lòng điền đầy đủ thông tin xin cảm ơn.
            </div>
        </form>
    </div>
</div>

